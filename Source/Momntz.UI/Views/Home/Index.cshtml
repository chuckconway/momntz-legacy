@using SquishIt.Framework
@using SquishIt.Mvc
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Momntz.</title>
        <link href="~/Content/css/site.css" rel="stylesheet" />

                @(Bundle.Css()
        .Add("/content/css/reset.css")
        .Add("/content/css/site.css")
        .Add("/content/css/forms.css")
        .MvcRender("/content/combined_#.css")
                      )
        
       <style type="text/css">
            body{background-color: #fff;}
            p{margin-top: 15px;}

            ul#signup, ul#signup li  { margin: 0;padding: 0;}
            ul#signup { margin-top: 20px;}
            ul#signup li { list-style: none;}
        </style>
    </head>
    <body>
        <div class="loginform centered formcontainer" >
            <img src="~/Content/images/momntzlogo.png" />
            <form method="POST"  >
                <p>
                    <label>Username</label>
                    <input type="text" name="username" />
                </p>
                
                <p>
                    <label>Password</label>
                    <input type="password" name="password" />
                </p>
                
                <p style="color:red; font-weight: bold;" ></p>

                <input type="submit" value="Login" />
            </form>
    
            <ul id="signup" >
                <li>Forgot your <a href="/forgot">password or username</a>?</li>
                <li>Need an account? <a href="/join">Sign up</a>!</li>
            </ul>
        </div>
    </body>
</html>

