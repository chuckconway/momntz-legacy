@using Momntz.UI.Core.Controllers
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Momntz - Saving one memory at a time</title>

    <link rel="stylesheet" href="/Content/css/Site.css" />
    <link rel="stylesheet" href="/Scripts/plugins/fancybox/jquery.fancybox-1.3.4.css" />
    <link rel="stylesheet" href="/Content/css/custom.css" />
@*    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/themes/ui-lightness/jquery-ui.css" />*@
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="/Scripts/plugins/tagit/css/jquery.tagit.css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/menu.css" />

    <script type='text/javascript' src='/Scripts/jquery.js?ver=1.7.2'></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/jquery-ui.min.js"></script>
    
    <script type="text/javascript" src="../../Scripts/plugins/tagit/tag-it.js"></script>
    <script type="text/javascript" src="/Scripts/plugins/fancybox/afterLoad.js"></script>

    @RenderSection("Head", required: false)
</head>

<body class="home blog">

    <div id="header">
        <div class="wrap">
            <div id="site-info">
                <h1 id="logo">
                    <a href="/" title="Momntz" rel="home">Momntz</a>
                </h1>
            </div>
            <!-- #site-info -->

            <div class="header-nav">
                <div class="menu">
                    @{ Html.RenderPartial("NavigationPartialView"); }
                </div>
            </div>

            <div id="social-networks">
                @{
                    Html.RenderPartial("LoginPartialView");
                }
            </div>
            <!-- #social-networks -->

            <div class="clearfix"></div>
        </div>
        <!-- #wrap -->
    </div>
    <div id="grid">
        
        <!-- #filtering-nav -->
        
        <div class="sort">
            @RenderBody()
        </div>
        <!-- #grid -->
    </div>
    <!-- #sort -->

    <div id="nav-below" class="navigation">
        <div class="nav-previous"></div>
        <div class="nav-next"></div>
        <div class="clearfix"></div>
    </div>
    <!-- #nav-below -->
    <br class="clearfix" />
    <div id="footer">
        <div class="wrap">
            <p>Copyright &copy; Momntz 2012  <span class="alignright">Designed by <a href="http://shakenandstirredweb.com/theme/shaken-grid" target="_blank">Shaken Grid Premium</a><br />
            </span></p>
            <div class="clearfix"></div>
        </div>
        <!-- #wrap -->
    </div>
    <!-- #footer -->

    <script type="text/javascript" src="/Scripts/plugins/plugins.js"></script>
    <script type="text/javascript" src="/Scripts/plugins/script.js"></script>
</body>
</html>
