@using Momntz.UI.Core.Controllers
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Momntz - Saving one memory at a time</title>

    <link rel="stylesheet" href="/Content/css/Site.css" />
    <link rel="stylesheet" href="/Scripts/plugins/fancybox/jquery.fancybox-1.3.4.css" />
    <link rel="stylesheet" href="/Content/css/custom.css" />
    <script type='text/javascript' src='/Scripts/jquery.js?ver=1.7.2'></script>

    @RenderSection("Head", required: false)
</head>

<body class="home blog">

    <div id="header">
        <div class="wrap">
            <div id="site-info">
                <h1 id="logo">
                    <a href="/" title="Momntz" rel="home">Momntz</a>
                </h1>
            </div>
            <!-- #site-info -->

            <div class="header-nav">
                <div class="menu">
                    <ul>
                        <li><a href="upload">Upload</a></li>
                        <li><a href="#">Tags</a></li>
                        <li><a href="#">Albums</a></li>
                        <li><a href="#">Connections</a></li>
                        <li><a href="#">Settings</a></li>
                    </ul>
                </div>
            </div>

            <div id="social-networks">
                @if (string.IsNullOrEmpty(BaseController.GetUsername()))
                {
                    <a href="/login" title="Home">Login</a>
                }
                else
                {
                    <a href="/signout" title="Home">Sign out</a>
                }
            </div>
            <!-- #social-networks -->

            <div class="clearfix"></div>
        </div>
        <!-- #wrap -->
    </div>
    <div id="grid">

        <div id="filtering-nav">
            <a href="#" class="filter-btn"><span>Filter</span></a>
            <ul>
                <li><a href="#" data-filter="*">All</a></li>
                <li><a href="#" data-filter=".black-and-white">Black and White</a></li>
                <li><a href="#" data-filter=".design">Design</a></li>
                <li><a href="#" data-filter=".moving-pictures">Moving Pictures</a></li>
                <li><a href="#" data-filter=".photography">Photography</a></li>
                <li><a href="#" data-filter=".quotes">Quotes</a></li>
                <li><a href="#" data-filter=".uncategorized">Uncategorized</a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <!-- #filtering-nav -->

        <div class="sort">
            @RenderBody()
        </div>
        <!-- #grid -->
    </div>
    <!-- #sort -->

    <div id="nav-below" class="navigation">
        <div class="nav-previous"></div>
        <div class="nav-next"></div>
        <div class="clearfix"></div>
    </div>
    <!-- #nav-below -->
    <br class="clearfix" />
    <div id="footer">
        <div class="wrap">
            <p>Copyright &copy; Momntz 2012  <span class="alignright">Designed by <a href="http://shakenandstirredweb.com/theme/shaken-grid" target="_blank">Shaken Grid Premium</a><br />
            </span></p>
            <div class="clearfix"></div>
        </div>
        <!-- #wrap -->
    </div>
    <!-- #footer -->

    <script type="text/javascript" src="/Scripts/plugins/plugins.js"></script>
    <script type="text/javascript" src="/Scripts/plugins/script.js"></script>
</body>
</html>
